@page
@model LoginModel

@{
    ViewData["Title"] = "Sign In";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="text-center mb-4 fade-in-up">
                <div class="mb-3">
                    <i data-lucide="log-in" style="width: 48px; height: 48px; color: var(--primary-500);"></i>
                </div>
                <h2 class="mb-2">Welcome Back</h2>
                <p class="text-muted">Sign in to access your Issue Tracker dashboard</p>
            </div>

            <div class="card border-0 shadow-sm fade-in-up" style="animation-delay: 0.2s;">
                <div class="card-body p-4">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label fw-semibold">
                                <i data-lucide="mail" class="me-2" style="width: 16px; height: 16px;"></i>Email Address
                            </label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Enter your email address" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label fw-semibold">
                                <i data-lucide="lock" class="me-2" style="width: 16px; height: 16px;"></i>Password
                            </label>
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Enter your password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        
                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label asp-for="Input.RememberMe" class="form-check-label">
                                Remember me
                            </label>
                        </div>
                        
                        <button id="login-submit" type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                            <i data-lucide="log-in" class="me-2" style="width: 18px; height: 18px;"></i>Sign In
                        </button>
                    </form>

                    <div class="text-center">
                        <p class="text-muted mb-2">
                            <a asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p class="text-muted mb-0">Don't have an account?</p>
                        <a class="btn btn-link" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                            <i data-lucide="user-plus" class="me-2" style="width: 16px; height: 16px;"></i>Register as a new user
                        </a>
                    </div>
                </div>
            </div>

            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <div class="card border-0 shadow-sm mt-3 fade-in-up" style="animation-delay: 0.3s;">
                    <div class="card-body p-4">
                        <h6 class="card-title text-center mb-3">Or sign in with</h6>
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                            <div class="d-grid gap-2">
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <button type="submit" class="btn btn-outline-secondary" name="provider" value="@provider.Name" title="Sign in using your @provider.DisplayName account">
                                        @provider.DisplayName
                                    </button>
                                }
                            </div>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}