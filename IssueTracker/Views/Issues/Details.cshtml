@model IssueTracker.Models.Issue
@using System.Security.Claims

@{
    var comments = ViewBag.Comments as List<IssueTracker.Models.Comment> ?? new List<IssueTracker.Models.Comment>();
    var canEdit = ViewBag.CanEdit as bool? ?? false;
    var isEngineerOrAdmin = User.IsInRole("Engineer") || User.IsInRole("Admin");
    var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<div class="d-flex justify-content-between align-items-start mb-5 fade-in-up">
    <div>
        <h1 class="mb-3 d-flex align-items-center">
            <i data-lucide="eye" class="me-3" style="width: 32px; height: 32px;"></i>Issue Details
        </h1>
        <p class="text-muted lead mb-0">View and manage issue information and comments</p>
    </div>
    <div class="d-flex gap-2">
        <a href="@Url.Action("Index", "Issues")" class="btn btn-outline-secondary">
            <i data-lucide="arrow-left" class="me-2" style="width: 16px; height: 16px;"></i>Back to Issues
        </a>
    </div>
</div>

<!-- Issue Details Card -->
<div class="card mb-4 fade-in-up" style="animation-delay: 0.1s;">
    <div class="card-header d-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center">
            <i data-lucide="bug" class="me-2" style="width: 18px; height: 18px;"></i>
            <span>Issue #@Model.Id</span>
        </div>
        @{
            var statusClass = Model.Status switch
            {
                "Open" => "bg-warning",
                "In Progress" => "bg-info",
                "Waiting for User" => "bg-secondary",
                "Resolved" => "bg-success",
                "Closed" => "bg-dark",
                _ => "bg-secondary"
            };
        }
        <span class="badge @statusClass">
            <i data-lucide="circle" class="me-1" style="width: 8px; height: 8px;"></i>@Model.Status
        </span>
    </div>
    <div class="card-body">
        <h3 class="mb-3">@Model.Title</h3>
        
                <div class="row mb-3">
            <div class="col-md-4">
                <p class="mb-2">
                    <strong><i data-lucide="alert-triangle" class="me-2" style="width: 16px; height: 16px;"></i>Priority:</strong>
                    @{
                        var priorityClass = Model.Priority switch
                        {
                            1 => "bg-danger",
                            2 => "bg-warning",
                            3 => "bg-info",
                            _ => "bg-success"
                        };
                        var priorityText = Model.Priority switch
                        {
                            1 => "Critical",
                            2 => "High",
                            3 => "Normal",
                            _ => "Low"
                        };
                    }
                    <span class="badge @priorityClass">@priorityText (@Model.Priority)</span>
                </p>
            </div>
            <div class="col-md-4">
                <p class="mb-2">
                    <strong><i data-lucide="calendar" class="me-2" style="width: 16px; height: 16px;"></i>Created:</strong>
                    @Model.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy 'at' HH:mm")
                </p>
            </div>
            <div class="col-md-4">
                <p class="mb-2">
                    <strong><i data-lucide="user-check" class="me-2" style="width: 16px; height: 16px;"></i>Assigned:</strong>
                    @if (string.IsNullOrEmpty(Model.AssignedToUserId))
                    {
                        <span class="text-muted">Unassigned</span>
                    }
                    else
                    {
                        <span class="badge bg-info">Assigned</span>
                    }
                </p>
            </div>
        </div>

        @* Engineer Assignment Actions *@
        @if (isEngineerOrAdmin)
        {
            <div class="row mb-3">
                <div class="col-12">
                    <div class="card" style="border-left: 4px solid #667eea;">
                        <div class="card-header" style="background-color: #f8f9ff;">
                            <h5 class="mb-0 d-flex align-items-center">
                                <i data-lucide="settings" class="me-2" style="width: 18px; height: 18px;"></i>
                                Engineer Actions
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <!-- Assignment Section -->
                                <div class="col-md-6">
                                    <h6 class="fw-semibold mb-2">
                                        <i data-lucide="user-plus" class="me-2" style="width: 16px; height: 16px;"></i>Assignment
                                    </h6>
                                    @if (string.IsNullOrEmpty(Model.AssignedToUserId))
                                    {
                                        @if (Model.Status == "Closed")
                                        {
                                            <div class="alert alert-warning mb-2 py-2 px-3" style="font-size: 0.875rem; border-radius: 8px;">
                                                <i data-lucide="x-circle" class="me-1" style="width: 12px; height: 12px;"></i>
                                                Cannot assign closed issues
                                            </div>
                                        }
                                        else
                                        {
                                            <form asp-action="AssignToMe" method="post" style="display: inline;">
                                                <input type="hidden" name="id" value="@Model.Id" />
                                                <button type="submit" class="btn btn-success btn-sm w-100">
                                                    <i data-lucide="user-check" class="me-2" style="width: 14px; height: 14px;"></i>
                                                    Assign to Me
                                                </button>
                                            </form>
                                        }
                                    }
                                    else if (Model.AssignedToUserId == userId)
                                    {
                                        <div class="mb-2">
                                            <span class="badge bg-info w-100 py-2">
                                                <i data-lucide="user" class="me-1" style="width: 12px; height: 12px;"></i>
                                                Assigned to You
                                            </span>
                                        </div>
                                        <form asp-action="Unassign" method="post">
                                            <input type="hidden" name="id" value="@Model.Id" />
                                            <button type="submit" class="btn btn-outline-warning btn-sm w-100">
                                                <i data-lucide="user-minus" class="me-2" style="width: 14px; height: 14px;"></i>
                                                Unassign
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary w-100 py-2">
                                            <i data-lucide="users" class="me-1" style="width: 12px; height: 12px;"></i>
                                            Assigned to Another Engineer
                                        </span>
                                    }
                                </div>

                                <!-- Edit Section -->
                                <div class="col-md-6">
                                    <h6 class="fw-semibold mb-2">
                                        <i data-lucide="edit" class="me-2" style="width: 16px; height: 16px;"></i>Modify Issue
                                    </h6>
                                    @{
                                        var isAdmin = User.IsInRole("Admin");
                                        var isSelfAssigned = Model.AssignedToUserId == userId;
                                    }
                                    @if (isAdmin || !isSelfAssigned)
                                    {
                                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm w-100">
                                            <i data-lucide="edit-2" class="me-2" style="width: 14px; height: 14px;"></i>
                                            Edit Details & Status
                                        </a>
                                    }
                                    else
                                    {
                                        <div class="alert alert-warning mb-2 py-2 px-3" style="font-size: 0.875rem; border-radius: 8px;">
                                            <i data-lucide="info" class="me-1" style="width: 12px; height: 12px;"></i>
                                            <strong>Assigned to you:</strong> Use status update below
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        @* Status Update Section for Engineers with Self-Assigned Issues *@
        @if (isEngineerOrAdmin && Model.AssignedToUserId == userId && !User.IsInRole("Admin"))
        {
            <div class="row mb-3">
                <div class="col-12">
                    <div class="card" style="border-left: 4px solid #06b6d4;">
                        <div class="card-header" style="background-color: #f0fdff;">
                            <h5 class="mb-0 d-flex align-items-center">
                                <i data-lucide="refresh-cw" class="me-2" style="width: 18px; height: 18px;"></i>
                                Update Issue Status
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="text-muted mb-3">
                                <i data-lucide="info" class="me-1" style="width: 14px; height: 14px;"></i>
                                As the assigned engineer, you can update the status to reflect your progress.
                            </p>
                            <form asp-action="UpdateStatus" method="post">
                                <input type="hidden" name="id" value="@Model.Id" />
                                <div class="row g-3">
                                    <div class="col-md-8">
                                        <select name="status" class="form-select">
                                            <option value="Open" selected="@(Model.Status == "Open")">📋 Open</option>
                                            <option value="In Progress" selected="@(Model.Status == "In Progress")">⏳ In Progress</option>
                                            <option value="Waiting for User" selected="@(Model.Status == "Waiting for User")">⏸️ Waiting for User</option>
                                            <option value="Resolved" selected="@(Model.Status == "Resolved")">✅ Resolved</option>
                                            <option value="Closed" selected="@(Model.Status == "Closed")">🔒 Closed</option>
                                        </select>
                                    </div>
                                    <div class="col-md-4">
                                        <button type="submit" class="btn w-100" style="background-color: #06b6d4; border-color: #06b6d4; color: white;">
                                            <i data-lucide="check" class="me-2" style="width: 14px; height: 14px;"></i>
                                            Update Status
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }

        @* Customer Close Issue Action *@
        @{
            var isCreator = Model.CreatedByUserId == userId;
            var canClose = (isCreator && (Model.Status == "Resolved" || Model.Status == "Waiting for User")) || isEngineerOrAdmin;
        }
        @if (canClose && Model.Status != "Closed")
        {
            <div class="row mb-3">
                <div class="col-12">
                    <div class="alert alert-info d-flex align-items-center">
                        <i data-lucide="info" class="me-2" style="width: 20px; height: 20px;"></i>
                        <div class="flex-grow-1">
                            @if (isCreator && Model.Status == "Resolved")
                            {
                                <text><strong>Issue Resolved:</strong> You can close this issue if you're satisfied with the resolution.</text>
                            }
                            else if (isCreator && Model.Status == "Waiting for User")
                            {
                                <text><strong>Action Required:</strong> This issue is waiting for your response. You can close it if no further action is needed.</text>
                            }
                            else if (isEngineerOrAdmin)
                            {
                                <text><strong>Admin/Engineer:</strong> You can close this issue at any time.</text>
                            }
                        </div>
                        <form asp-action="CloseIssue" method="post" style="display: inline;">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-lg shadow" style="background-color: #dc3545; border-color: #dc3545; color: white; font-weight: 600;" onclick="return confirm('Are you sure you want to close this issue?')">
                                <i data-lucide="x-circle" class="me-2" style="width: 18px; height: 18px;"></i>
                                Close Issue
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(Model.Description))
        {
            <div class="mb-3">
                <strong><i data-lucide="file-text" class="me-2" style="width: 16px; height: 16px;"></i>Description:</strong>
                <div class="mt-2 p-3 bg-light rounded">
                    @Model.Description
                </div>
            </div>
        }
    </div>
</div>

<!-- Comments Section -->
<div class="card fade-in-up" style="animation-delay: 0.2s;">
    <div class="card-header d-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center">
            <i data-lucide="message-square" class="me-2" style="width: 18px; height: 18px;"></i>
            <span>Comments (@comments.Count)</span>
        </div>
    </div>
    <div class="card-body">
        @if (comments.Any())
        {
            <div class="comment-list mb-4">
                @foreach (var comment in comments)
                {
                    <div class="comment-item mb-3 p-3 border rounded">
                        <div class="d-flex align-items-center mb-2">
                            <div class="comment-avatar me-3">
                                <i data-lucide="user" style="width: 20px; height: 20px; color: var(--primary-500);"></i>
                            </div>
                            <div>
                                <small class="text-muted">
                                    <i data-lucide="clock" class="me-1" style="width: 12px; height: 12px;"></i>
                                    @comment.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy 'at' HH:mm")
                                </small>
                            </div>
                        </div>
                        <div class="comment-text">
                            @comment.Text
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state text-center py-4">
                <i data-lucide="message-square" style="width: 48px; height: 48px; color: var(--gray-400);"></i>
                <h5 class="mt-3">No comments yet</h5>
                <p class="text-muted">Be the first to add a comment to this issue.</p>
            </div>
        }

        <!-- Add Comment Form -->
        <div class="border-top pt-3">
            <h5 class="mb-3">
                <i data-lucide="plus-circle" class="me-2" style="width: 18px; height: 18px;"></i>Add a Comment
            </h5>
            <form asp-action="PostComment" method="post">
                <input type="hidden" name="issueId" value="@Model.Id" />
                <div class="mb-3">
                    <textarea name="text" class="form-control" rows="4" 
                              placeholder="Share your thoughts, updates, or ask questions about this issue..." 
                              required></textarea>
                </div>
                <button type="submit" class="btn" style="background-color: #667eea; border-color: #667eea; color: white;">
                    <i data-lucide="send" class="me-2" style="width: 16px; height: 16px;"></i>Post Comment
                </button>
            </form>
        </div>
    </div>
</div>
