@model List<IssueTracker.Models.Issue>

@using System.Linq

<div class="d-flex justify-content-between align-items-start mb-5 fade-in-up">
    <div>
        <h1 class="mb-3 d-flex align-items-center">
            <i data-lucide="bar-chart-3" class="me-3" style="width: 32px; height: 32px;"></i>Issue Analytics
        </h1>
        <p class="text-muted lead mb-0">Comprehensive overview of all issues and their status</p>
    </div>
    <a href="@Url.Action("Create", "Issues")" class="btn btn-success btn-lg">
        <i data-lucide="plus" class="me-2" style="width: 18px; height: 18px;"></i>Create New Issue
    </a>
</div>

@{
    var total = Model.Count;
    var openCount = Model.Count(i => i.Status == "Open");
    var inProgressCount = Model.Count(i => i.Status == "In Progress");
    var waitingCount = Model.Count(i => i.Status == "Waiting for User");
    var resolvedCount = Model.Count(i => i.Status == "Resolved");
    var closedCount = Model.Count(i => i.Status == "Closed");
    var resolvedClosed = resolvedCount + closedCount;

    int high = Model.Count(i => i.Priority == 1);
    int normal = Model.Count(i => i.Priority == 3);
    int low = Model.Count(i => i.Priority >= 4);

    var recentIssues = Model
        .OrderByDescending(i => i.CreatedAt)
        .Take(5)
        .ToList();
}

<div class="row mb-4">
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="stats-card slide-in" style="animation-delay: 0.1s;">
            <div class="stats-icon">
                <i data-lucide="clipboard-list" style="width: 24px; height: 24px; color: var(--primary-500);"></i>
            </div>
            <p class="text-muted">Total Issues</p>
            <h3 class="mb-0">@total</h3>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="stats-card slide-in" style="animation-delay: 0.2s;">
            <div class="stats-icon">
                <i data-lucide="folder-open" style="width: 24px; height: 24px; color: var(--warning-500);"></i>
            </div>
            <p class="text-muted">Open</p>
            <h3 class="mb-0">@openCount</h3>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="stats-card slide-in" style="animation-delay: 0.3s;">
            <div class="stats-icon">
                <i data-lucide="clock" style="width: 24px; height: 24px; color: var(--info-500);"></i>
            </div>
            <p class="text-muted">In Progress</p>
            <h3 class="mb-0">@inProgressCount</h3>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="stats-card slide-in" style="animation-delay: 0.4s;">
            <div class="stats-icon">
                <i data-lucide="check-circle" style="width: 24px; height: 24px; color: var(--success-500);"></i>
            </div>
            <p class="text-muted">Resolved + Closed</p>
            <h3 class="mb-0">@resolvedClosed</h3>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-lg-8 mb-4">
        <div class="card fade-in-up" style="animation-delay: 0.5s;">
            <div class="card-header d-flex align-items-center">
                <i data-lucide="clock" class="me-2" style="width: 18px; height: 18px;"></i>
                <span>Recent Issues</span>
            </div>
            <div class="card-body p-0">
                @if (!recentIssues.Any())
                {
                    <p class="p-3 mb-0 text-muted">No issues yet.</p>
                }
                else
                {
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Status</th>
                                <th>Priority</th>
                                <th>Created</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var issue in recentIssues)
                            {
                                <tr>
                                    <td>@issue.Title</td>
                                    <td>@issue.Status</td>
                                    <td>@issue.Priority</td>
                                    <td>@issue.CreatedAt</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-4 mb-4">
        <div class="card fade-in-up" style="animation-delay: 0.6s;">
            <div class="card-header d-flex align-items-center">
                <i data-lucide="alert-triangle" class="me-2" style="width: 18px; height: 18px;"></i>
                <span>Issues by Priority</span>
            </div>
            <div class="card-body">
                <div class="mb-4">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="fw-semibold d-flex align-items-center" style="color: var(--danger-600);">
                            <i data-lucide="alert-circle" class="me-2" style="width: 16px; height: 16px;"></i>High Priority
                        </span>
                        <span class="badge bg-danger">@high</span>
                    </div>
                    <div class="progress mb-3" style="height: 10px;">
                        <div class="progress-bar bg-danger" role="progressbar"
                             style="width:@(total == 0 ? 0 : high * 100 / total)%"></div>
                    </div>
                </div>

                <div class="mb-4">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="fw-semibold d-flex align-items-center" style="color: var(--warning-600);">
                            <i data-lucide="minus-circle" class="me-2" style="width: 16px; height: 16px;"></i>Normal Priority
                        </span>
                        <span class="badge bg-warning">@normal</span>
                    </div>
                    <div class="progress mb-3" style="height: 10px;">
                        <div class="progress-bar bg-warning" role="progressbar"
                             style="width:@(total == 0 ? 0 : normal * 100 / total)%"></div>
                    </div>
                </div>

                <div class="mb-2">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="fw-semibold d-flex align-items-center" style="color: var(--success-600);">
                            <i data-lucide="check-circle" class="me-2" style="width: 16px; height: 16px;"></i>Low Priority
                        </span>
                        <span class="badge bg-success">@low</span>
                    </div>
                    <div class="progress" style="height: 10px;">
                        <div class="progress-bar bg-success" role="progressbar"
                             style="width:@(total == 0 ? 0 : low * 100 / total)%"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card fade-in-up" style="animation-delay: 0.7s;">
<div class="card-header d-flex align-items-center">
    <i data-lucide="list" class="me-2" style="width: 18px; height: 18px;"></i>
    <span>All Issues</span>
</div>
<div class="card-body">
    <form asp-action="Index" method="get" class="mb-4">
        <div class="row g-3 align-items-end">
            <div class="col-md-4">
                <label for="status" class="form-label fw-semibold">
                    <i data-lucide="filter" class="me-2" style="width: 16px; height: 16px;"></i>Filter by Status
                </label>
                <select id="status" name="status" class="form-select" onchange="this.form.submit()">
                    <option value="">All Status</option>
                        <option value="Open" selected="@(ViewBag.CurrentStatus == "Open")">Open</option>
                        <option value="In Progress" selected="@(ViewBag.CurrentStatus == "In Progress")">In Progress</option>
                        <option value="Waiting for User" selected="@(ViewBag.CurrentStatus == "Waiting for User")">Waiting for User</option>
                        <option value="Resolved" selected="@(ViewBag.CurrentStatus == "Resolved")">Resolved</option>
                        <option value="Closed" selected="@(ViewBag.CurrentStatus == "Closed")">Closed</option>
                </select>
            </div>
            <div class="col-md-6">
                <label for="search" class="form-label fw-semibold">
                    <i data-lucide="search" class="me-2" style="width: 16px; height: 16px;"></i>Search Issues
                </label>
                <input type="text"
                       id="search"
                       name="search"
                       placeholder="Search by title or description..."
                       value="@(ViewBag.CurrentSearch ?? "")"
                       class="form-control" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i data-lucide="search" class="me-1" style="width: 16px; height: 16px;"></i>Search
                </button>
            </div>
        </div>
    </form>

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>
                            <div class="d-flex align-items-center">
                                <i data-lucide="tag" class="me-2" style="width: 14px; height: 14px;"></i>Title
                            </div>
                        </th>
                        <th>
                            <div class="d-flex align-items-center">
                                <i data-lucide="file-text" class="me-2" style="width: 14px; height: 14px;"></i>Description
                            </div>
                        </th>
                        <th>
                            <div class="d-flex align-items-center">
                                <i data-lucide="info" class="me-2" style="width: 14px; height: 14px;"></i>Status
                            </div>
                        </th>
                        <th>
                            <div class="d-flex align-items-center">
                                <i data-lucide="alert-triangle" class="me-2" style="width: 14px; height: 14px;"></i>Priority
                            </div>
                        </th>
                        <th>
                            <div class="d-flex align-items-center">
                                <i data-lucide="calendar" class="me-2" style="width: 14px; height: 14px;"></i>Created
                            </div>
                        </th>
                        <th style="width: 140px;">
                            <div class="d-flex align-items-center">
                                <i data-lucide="settings" class="me-2" style="width: 14px; height: 14px;"></i>Actions
                            </div>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var issue in Model)
                    {
                        <tr>
                            <td>
                                <div class="fw-semibold" style="color: var(--gray-900);">@issue.Title</div>
                                <small class="text-muted">#@issue.Id</small>
                            </td>
                            <td>
                                <div class="text-muted" style="max-width: 280px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                    @issue.Description
                                </div>
                            </td>
                            <td>
                                @{
                                    var statusClass = issue.Status switch
                                    {
                                        "Open" => "bg-warning",
                                        "In Progress" => "bg-info",
                                        "Waiting for User" => "bg-secondary",
                                        "Resolved" => "bg-success",
                                        "Closed" => "bg-dark",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @statusClass">
                                    <i data-lucide="circle" class="me-1" style="width: 8px; height: 8px;"></i>@issue.Status
                                </span>
                            </td>
                            <td>
                                @{
                                    var priorityClass = issue.Priority switch
                                    {
                                        1 => "bg-danger",
                                        2 => "bg-warning",
                                        3 => "bg-info",
                                        _ => "bg-success"
                                    };
                                    var priorityText = issue.Priority switch
                                    {
                                        1 => "High",
                                        2 => "Medium",
                                        3 => "Normal",
                                        _ => "Low"
                                    };
                                }
                                <span class="badge @priorityClass">
                                    @priorityText (@issue.Priority)
                                </span>
                            </td>
                            <td class="text-muted">
                                <div class="d-flex align-items-center mb-1">
                                    <i data-lucide="clock" class="me-1" style="width: 12px; height: 12px;"></i>
                                    <span class="text-sm">@issue.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy")</span>
                                </div>
                                <small>@issue.CreatedAt.ToLocalTime().ToString("HH:mm")</small>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@issue.Id" class="btn btn-sm btn-outline-primary" title="View Details">
                                        <i data-lucide="eye" style="width: 14px; height: 14px;"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@issue.Id" class="btn btn-sm btn-outline-secondary" title="Edit Issue">
                                        <i data-lucide="edit" style="width: 14px; height: 14px;"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
