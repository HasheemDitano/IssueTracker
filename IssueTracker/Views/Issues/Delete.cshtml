@model IssueTracker.Models.Issue

<div class="d-flex justify-content-between align-items-start mb-5 fade-in-up">
    <div>
        <h1 class="mb-3 d-flex align-items-center">
            <i data-lucide="trash-2" class="me-3 text-danger" style="width: 32px; height: 32px;"></i>Delete Issue
        </h1>
        <p class="text-muted lead mb-0">Permanently delete this issue and all associated data</p>
    </div>
    <a href="@Url.Action("Details", "Issues", new { id = Model.Id })" class="btn btn-outline-secondary">
        <i data-lucide="arrow-left" class="me-2" style="width: 16px; height: 16px;"></i>Back to Details
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="alert alert-warning fade-in-up" style="animation-delay: 0.1s;">
            <div class="d-flex align-items-center">
                <i data-lucide="alert-triangle" class="me-3" style="width: 24px; height: 24px;"></i>
                <div>
                    <h5 class="mb-1">Warning: This action cannot be undone</h5>
                    <p class="mb-0">Deleting this issue will permanently remove all associated comments and data.</p>
                </div>
            </div>
        </div>

        <div class="card fade-in-up" style="animation-delay: 0.2s;">
            <div class="card-header d-flex align-items-center">
                <i data-lucide="bug" class="me-2" style="width: 18px; height: 18px;"></i>
                <span>Issue #@Model.Id</span>
            </div>
            <div class="card-body">
                <h4 class="mb-3">@Model.Title</h4>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <p class="mb-2">
                            <strong><i data-lucide="info" class="me-2" style="width: 16px; height: 16px;"></i>Status:</strong>
                            @{
                                var statusClass = Model.Status switch
                                {
                                    "Open" => "bg-warning",
                                    "In Progress" => "bg-info",
                                    "Waiting for User" => "bg-secondary",
                                    "Resolved" => "bg-success",
                                    "Closed" => "bg-dark",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @statusClass">@Model.Status</span>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <p class="mb-2">
                            <strong><i data-lucide="alert-triangle" class="me-2" style="width: 16px; height: 16px;"></i>Priority:</strong>
                            @{
                                var priorityClass = Model.Priority switch
                                {
                                    1 => "bg-danger",
                                    2 => "bg-warning", 
                                    3 => "bg-info",
                                    _ => "bg-success"
                                };
                                var priorityText = Model.Priority switch
                                {
                                    1 => "Critical",
                                    2 => "High",
                                    3 => "Normal",
                                    _ => "Low"
                                };
                            }
                            <span class="badge @priorityClass">@priorityText (@Model.Priority)</span>
                        </p>
                    </div>
                </div>

                <p class="mb-2">
                    <strong><i data-lucide="calendar" class="me-2" style="width: 16px; height: 16px;"></i>Created:</strong>
                    @Model.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy 'at' HH:mm")
                </p>

                @if (!string.IsNullOrWhiteSpace(Model.Description))
                {
                    <div class="mb-3">
                        <strong><i data-lucide="file-text" class="me-2" style="width: 16px; height: 16px;"></i>Description:</strong>
                        <div class="mt-2 p-3 bg-light rounded">
                            @Model.Description
                        </div>
                    </div>
                }

                <hr class="my-4">

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Details", "Issues", new { id = Model.Id })" class="btn btn-outline-secondary">
                            <i data-lucide="x" class="me-2" style="width: 16px; height: 16px;"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i data-lucide="trash-2" class="me-2" style="width: 18px; height: 18px;"></i>Delete Issue
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
