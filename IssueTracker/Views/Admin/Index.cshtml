@model List<(Microsoft.AspNetCore.Identity.IdentityUser User, System.Collections.Generic.IList<string> Roles)>

<div class="d-flex justify-content-between align-items-start mb-5 fade-in-up">
    <div>
        <h1 class="mb-3 d-flex align-items-center">
            <i data-lucide="users-cog" class="me-3" style="width: 32px; height: 32px;"></i>User Management
        </h1>
        <p class="text-muted lead mb-0">Manage user roles and permissions</p>
    </div>
</div>

<div class="card fade-in-up" style="animation-delay: 0.2s;">
<div class="card-header d-flex align-items-center">
    <i data-lucide="users" class="me-2" style="width: 18px; height: 18px;"></i>
    <span>System Users</span>
</div>
<div class="card-body p-0">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
<thead>
    <tr>
        <th>
            <div class="d-flex align-items-center">
                <i data-lucide="mail" class="me-2" style="width: 14px; height: 14px;"></i>Email
            </div>
        </th>
        <th>
            <div class="d-flex align-items-center">
                <i data-lucide="user-check" class="me-2" style="width: 14px; height: 14px;"></i>Current Roles
            </div>
        </th>
        <th>
            <div class="d-flex align-items-center">
                <i data-lucide="user" class="me-2" style="width: 14px; height: 14px;"></i>Customer Role
            </div>
        </th>
        <th>
            <div class="d-flex align-items-center">
                <i data-lucide="wrench" class="me-2" style="width: 14px; height: 14px;"></i>Engineer Role
            </div>
        </th>
        <th>
            <div class="d-flex align-items-center">
                <i data-lucide="crown" class="me-2" style="width: 14px; height: 14px;"></i>Admin Role
            </div>
        </th>
    </tr>
</thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <div class="d-flex align-items-center">
                        <div class="comment-avatar me-3">
                            <i data-lucide="user" style="width: 16px; height: 16px; color: var(--primary-500);"></i>
                        </div>
                        <div>
                            <div class="fw-semibold" style="color: var(--gray-900);">@item.User.Email</div>
                            <small class="text-muted">User ID: @item.User.Id.Substring(0, 8)...</small>
                        </div>
                    </div>
                </td>
                <td>
                    @if (item.Roles.Any())
                    {
                        @foreach (var role in item.Roles)
                        {
                            var roleClass = role switch
                            {
                                "Admin" => "bg-danger",
                                "Engineer" => "bg-warning",
                                "Customer" => "bg-info",
                                _ => "bg-secondary"
                            };
                            <span class="badge @roleClass me-1 mb-1">
                                <i data-lucide="user-check" class="me-1" style="width: 12px; height: 12px;"></i>@role
                            </span>
                        }
                    }
                    else
                    {
                        <span class="text-muted">No roles assigned</span>
                    }
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <form asp-action="AddRole" method="post" style="display:inline">
                            <input type="hidden" name="userId" value="@item.User.Id" />
                            <input type="hidden" name="role" value="Customer" />
                            <button type="submit" class="btn btn-sm btn-outline-success" title="Add Customer Role">
                                <i data-lucide="plus" style="width: 14px; height: 14px;"></i>
                            </button>
                        </form>
                        <form asp-action="RemoveRole" method="post" style="display:inline">
                            <input type="hidden" name="userId" value="@item.User.Id" />
                            <input type="hidden" name="role" value="Customer" />
                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Remove Customer Role">
                                <i data-lucide="minus" style="width: 14px; height: 14px;"></i>
                            </button>
                        </form>
                    </div>
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <form asp-action="AddRole" method="post" style="display:inline">
                            <input type="hidden" name="userId" value="@item.User.Id" />
                            <input type="hidden" name="role" value="Engineer" />
                            <button type="submit" class="btn btn-sm btn-outline-success" title="Add Engineer Role">
                                <i data-lucide="plus" style="width: 14px; height: 14px;"></i>
                            </button>
                        </form>
                        <form asp-action="RemoveRole" method="post" style="display:inline">
                            <input type="hidden" name="userId" value="@item.User.Id" />
                            <input type="hidden" name="role" value="Engineer" />
                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Remove Engineer Role">
                                <i data-lucide="minus" style="width: 14px; height: 14px;"></i>
                            </button>
                        </form>
                    </div>
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <form asp-action="AddRole" method="post" style="display:inline">
                            <input type="hidden" name="userId" value="@item.User.Id" />
                            <input type="hidden" name="role" value="Admin" />
                            <button type="submit" class="btn btn-sm btn-outline-success" title="Add Admin Role">
                                <i data-lucide="plus" style="width: 14px; height: 14px;"></i>
                            </button>
                        </form>
                        <form asp-action="RemoveRole" method="post" style="display:inline">
                            <input type="hidden" name="userId" value="@item.User.Id" />
                            <input type="hidden" name="role" value="Admin" />
                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Remove Admin Role">
                                <i data-lucide="minus" style="width: 14px; height: 14px;"></i>
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
            </table>
        </div>
    </div>
</div>
